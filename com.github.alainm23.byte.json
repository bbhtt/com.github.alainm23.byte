{
    "app-id": "com.github.alainm23.byte",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-19.08",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alainm23.byte",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/taglib/taglib/archive/v1.11.1.tar.gz",
                "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
            }]
        },
        {
            "name": "byte",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/alainm23/byte/archive/0.1.16.tar.gz",
                "sha256": "d112e2b481ac1ea45e18474a79f81a1a13e312504073119cca74310375e50c04"
            }]
        }
    ]
}

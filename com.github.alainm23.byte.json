{
    "app-id": "com.github.alainm23.byte",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-19.08",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alainm23.byte",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
        "--talk-name=org.mpris.MediaPlayer2"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/taglib/taglib/archive/v1.11.1.tar.gz",
                "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
            }]
        },
        {
            "name": "byte",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/alainm23/byte/archive/0.1.11.tar.gz",
                "sha256": "71c85ac97ec7640e880de2d7f1aca6f8b1212f45040a9ab529cd6edea7d78704"
            },{
                "type": "patch",
                "path": "elementary-theme.patch"
            }]
        }
    ]
}
